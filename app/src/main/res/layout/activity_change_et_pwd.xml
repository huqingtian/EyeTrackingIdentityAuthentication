<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txt_change_tittle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:textSize="30sp"
            android:textColor="#000000"
            android:text="请输入眼动密码"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent">
            <TextView
                android:id="@+id/txt_change_showpwd1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="77dp"
                android:layout_marginTop="20dp"
                android:textColor="#000000"
                android:background="@drawable/eyetrackpwd_shape"/>
            <TextView
                android:id="@+id/txt_change_showpwd2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:textColor="#000000"
                android:background="@drawable/eyetrackpwd_shape"/>
            <TextView
                android:id="@+id/txt_change_showpwd3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:textColor="#000000"
                android:background="@drawable/eyetrackpwd_shape"/>
            <TextView
                android:id="@+id/txt_change_showpwd4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:textColor="#000000"
                android:background="@drawable/eyetrackpwd_shape"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/img_cancel"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="30dp"
            android:text="1"
            android:textColor="#000000"
            android:gravity="center"
            android:textSize="40sp"
            android:background="@drawable/eyetrackpwd_shape"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="25dp"
            android:text="2"
            android:textColor="#000000"
            android:gravity="center"
            android:textSize="40sp"
            android:background="@drawable/eyetrackpwd_shape"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="25dp"
            android:text="3"
            android:textColor="#000000"
            android:gravity="center"
            android:textSize="40sp"
            android:background="@drawable/eyetrackpwd_shape"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp">
        <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="30dp"
            android:text="4"
            android:textColor="#000000"
            android:gravity="center"
            android:textSize="40sp"
            android:background="@drawable/eyetrackpwd_shape"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="25dp"
            android:text="5"
            android:textColor="#000000"
            android:gravity="center"
            android:textSize="40sp"
            android:background="@drawable/eyetrackpwd_shape"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="25dp"
            android:text="6"
            android:textColor="#000000"
            android:gravity="center"
            android:textSize="40sp"
            android:background="@drawable/eyetrackpwd_shape"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp">
        <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="30dp"
            android:text="7"
            android:textColor="#000000"
            android:gravity="center"
            android:textSize="40sp"
            android:background="@drawable/eyetrackpwd_shape"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="25dp"
            android:text="8"
            android:textColor="#000000"
            android:gravity="center"
            android:textSize="40sp"
            android:background="@drawable/eyetrackpwd_shape"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="25dp"
            android:text="9"
            android:textColor="#000000"
            android:gravity="center"
            android:textSize="40sp"
            android:background="@drawable/eyetrackpwd_shape"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="25dp">
        <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="155dp"
            android:text="0"
            android:textColor="#000000"
            android:gravity="center"
            android:textSize="40sp"
            android:background="@drawable/eyetrackpwd_shape"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="40sp"
            android:layout_marginTop="40dp"
            android:layout_marginStart="40dp"
            android:text="取消"/>
    </LinearLayout>
</LinearLayout>