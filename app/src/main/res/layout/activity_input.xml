<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:layout_marginBottom="280dp"
        android:layout_gravity="center">
        <TextView
            android:id="@+id/txt_input_show"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:textSize="40dp"
            android:textColor="#000000" />
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center|right"
            android:layout_marginEnd="20dp"
            android:src="@drawable/img_cancel"/>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:layout_marginBottom="140dp"
        android:layout_gravity="center">
        <TextView
            android:id="@+id/txt_input_1"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginStart="10dp"
            android:text="1\nABC"
            android:textColor="#000000"
            android:gravity="center"
            android:textSize="40sp"
            android:background="@drawable/independentpwd_shape0"/>
        <TextView
            android:id="@+id/txt_input_2"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center|top"
            android:text="2\nDEF"
            android:textColor="#000000"
            android:gravity="center"
            android:textSize="40sp"
            android:background="@drawable/independentpwd_shape0"/>
        <TextView
            android:id="@+id/txt_input_3"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginEnd="10dp"
            android:layout_gravity="end"
            android:text="3\nGHI"
            android:textColor="#000000"
            android:gravity="center"
            android:textSize="40sp"
            android:background="@drawable/independentpwd_shape0"/>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <TextView
            android:id="@+id/txt_input_4"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginStart="10dp"
            android:text="4\nJKL"
            android:textColor="#000000"
            android:gravity="center"
            android:textSize="40sp"
            android:background="@drawable/independentpwd_shape0"/>
        <TextView
            android:id="@+id/txt_input_5"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center|top"
            android:text="5\nMNO"
            android:textColor="#000000"
            android:gravity="center"
            android:textSize="40sp"
            android:background="@drawable/independentpwd_shape0"/>
        <TextView
            android:id="@+id/txt_input_6"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginEnd="10dp"
            android:layout_gravity="end"
            android:text="6\nPQR"
            android:textColor="#000000"
            android:gravity="center"
            android:textSize="40sp"
            android:background="@drawable/independentpwd_shape0"/>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:layout_marginTop="140dp"
        android:layout_gravity="center">
        <TextView
            android:id="@+id/txt_input_7"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginStart="10dp"
            android:text="7\nSTU"
            android:textColor="#000000"
            android:gravity="center"
            android:textSize="40sp"
            android:background="@drawable/independentpwd_shape0"/>
        <TextView
            android:id="@+id/txt_input_8"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center|top"
            android:text="8\nWVX"
            android:textColor="#000000"
            android:gravity="center"
            android:textSize="40sp"
            android:background="@drawable/independentpwd_shape0"/>
        <TextView
            android:id="@+id/txt_input_9"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginEnd="10dp"
            android:layout_gravity="end"
            android:text="9\nYZ0"
            android:textColor="#000000"
            android:gravity="center"
            android:textSize="40sp"
            android:background="@drawable/independentpwd_shape0"/>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="40sp"
            android:layout_marginEnd="10dp"
            android:layout_gravity="right|bottom"
            android:text="取消"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="40sp"
            android:layout_marginStart="10dp"
            android:layout_gravity="left|bottom"
            android:text="确定"/>
    </FrameLayout>
</FrameLayout>